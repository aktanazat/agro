{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": ".",
    "skipLibCheck": true,
    "paths": {
      "@contracts/*": ["../contracts/typescript/*"]
    }
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "fixtures/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
