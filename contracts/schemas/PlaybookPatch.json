{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://fieldscout-copilot/contracts/schemas/PlaybookPatch.json",
  "title": "PlaybookPatch",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "patchId",
    "playbookId",
    "baseVersion",
    "requestedByDeviceId",
    "requestedAt",
    "reason",
    "operations"
  ],
  "properties": {
    "patchId": {
      "type": "string",
      "pattern": "^pch_[0-9]{8}_[0-9]{4}$"
    },
    "playbookId": {
      "type": "string",
      "pattern": "^pbk_[a-z0-9_]+$"
    },
    "baseVersion": {
      "type": "integer",
      "minimum": 1
    },
    "requestedByDeviceId": {
      "type": "string",
      "pattern": "^dev_[a-z0-9_]+$"
    },
    "requestedAt": {
      "type": "string",
      "format": "date-time"
    },
    "reason": {
      "type": "string",
      "minLength": 1
    },
    "operations": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["op", "path"],
        "properties": {
          "op": {
            "type": "string",
            "enum": ["add", "replace", "remove"]
          },
          "path": {
            "type": "string",
            "pattern": "^/rules/"
          },
          "value": {},
          "justification": {
            "type": "string"
          }
        }
      }
    }
  }
}
